{
  "name": "frevo",
  "version": "1.0.1",
  "description": "A simple starter static code generator to Front-End development",
  "bin": {
    "frevo": "bin/frevo"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,json} && standard --fix",
    "lint": "standard",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmontejr/frevo.git"
  },
  "author": "Jos√© Monte (https://jmontejr.github.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jmontejr/frevo/issues"
  },
  "homepage": "https://github.com/jmontejr/frevo#readme",
  "files": [
    "src",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "dependencies": {
    "gluegun": "latest"
  },
  "devDependencies": {
    "standard": "^12.0.1",
    "prettier": "^1.12.1",
    "jest": "^24.1.0"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
